@model DealDouble.Entity.Auction


<!-- Modal Header -->
<div class="modal-header">
    <h4 class="modal-title">Edit Auction</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<form id="editForm" method="post">
    <!-- Modal body -->
    <div class="modal-body">
        <input name="ID" type="hidden" value="@Model.ID" />
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" name="Title" value="@Model.Title">
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" name="Description" value="@Model.Description">
        </div>
        <div class="mb-3">
            <label class="form-label">Actual Amount</label>
            <input type="text" class="form-control" name="ActualAmount" value="@Model.ActualAmount">
        </div>
        <div class="mb-3">
            <label class="form-label">Starting Time</label>
            <input type="text" class="form-control" name="StartingTime" value="@Model.StartingTime">
        </div>
        <div class="mb-3">
            <label class="form-label">Ending Time</label>
            <input type="text" class="form-control" name="EndingTime" value="@Model.EndingTime">
        </div>
    </div>

    <!-- Modal footer -->
    <div class="modal-footer">
        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveButton">Save</button>
    </div>
</form>



<script>
    $("#saveButton").click(function () {
        $.ajax({
            url: "/Auction/Edit",
            method: "post",
            data: $("#editForm").serialize()
        }).done(function (response) {
            
            $("#listingArea").html(response);
            $("#formModal").model('toggle');
        }).fail(function () { });
    });
</script>

