
@model DealDouble.ViewModels.AuctionListingViewModel

<div class="col-md-12">
    <br />
    <div>
        <button id="createButton" class="btn btn-success" data-toggle="modal" data-target="#formModal">Add Auction</button>
    </div>
    <br />

    <div id="listingArea">
        @{Html.RenderAction("Listing");}
    </div>

    <div class="modal" id="formModal">
        <div class="modal-dialog">
            <div class="modal-content" id="contentArea">



            </div>
        </div>
    </div>


</div>

<script>
    $("#createButton").click(function () {
        $.ajax({
            url: "/Auction/Create",
            type: "get"
        }).done(function (response) {
            $("#contentArea").html(response);
            $("#formModal").model('toggle');
        });
    });



</script>







