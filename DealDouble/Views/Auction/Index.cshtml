
@model List<DealDouble.Entity.Auction>

<div id="listingArea">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>ActualAmount</th>
                <th>StartingTime</th>
                <th>EndingTime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var auction in Model)
            {
                <tr>
                    <td>@auction.ID</td>
                    <td>@auction.Title</td>
                    <td>@auction.Description</td>
                    <td>@auction.ActualAmount</td>
                    <td>@auction.StartingTime</td>
                    <td>@auction.EndingTime</td>
                    <td>
                        <button class="editButton" data-id="@auction.ID">Edit</button>
                        <button class="deleteButton" data-id="@auction.ID">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <button id="createButton">Create New Auction</button>
    </div>

    <div id="contentArea">

    </div>

    <script>
        $("#createButton").click(function () {
            $.ajax({
                url: "/Auction/Create",
                method: "get"
            }).done(function (response) {
                debugger;

                $("#contentArea").html(response);
            });
        });


        $(".editButton").click(function () {
            $.ajax({
                url: "/Auction/Edit",
                method: "get",
                data: {
                    ID: $(this).attr("data-id")
                }
            }).done(function (response) {
                debugger;

                $("#contentArea").html(response);
            });
        });


        $(".deleteButton").click(function () {

            debugger;

            var result = confirm("Are you sure you want to delete this Auction!!!");

            debugger;

            if (result) {
                $.ajax({
                    url: "/Auction/Delete",
                    method: "post",
                    data: {
                        ID: $(this).attr("data-id")
                    }
                }).done(function (response) {
                    debugger;

                    $("#listingArea").html(response);
                });
            }
           
        });
    </script>

</div>





