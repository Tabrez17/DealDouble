
<h2>Create Auction</h2>

<form id="createForm" method="post" action="/Auction/Create">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" name="Title">
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" name="Description">
    </div>
    <div class="mb-3">
        <label class="form-label">Actual Amount</label>
        <input type="text" class="form-control" name="ActualAmount">
    </div>
    <div class="mb-3">
        <label class="form-label">Starting Time</label>
        <input type="text" class="form-control" name="StartingTime">
    </div>
    <div class="mb-3">
        <label class="form-label">Ending Time</label>
        <input type="text" class="form-control" name="EndingTime">
    </div>
    <button type="button" class="btn btn-primary" id="saveButton">Save</button>
</form>




<script>
    $("#saveButton").click(function () {
        $.ajax({
            url: "/Auction/Create",
            method: "post",
            data: $("#createForm").serialize()
        }).done(function (response) {
            debugger;

            $("#listingArea").html(response);
        }).fail(function () { });
    });
</script>
